@model IEnumerable<TicketEntry>
@{
    ViewData["Title"] = "Home Page";
}
<h2>Ticket List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>TicketSystemCategoryType</th>
            <th>Created Date</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td class="align-middle">@ticket.Title</td>
                <td class="align-middle">@ticket.Description</td>
                <td class="align-middle">@ticket.TicketSystemCategoryTypeID</td>
                <td class="align-middle">@ticket.CreatedDate</td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@ticket.TicketEntryID"><i class="bi bi-pencil-square"></i>Edit </a> |
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@ticket.TicketEntryID"><i class="bi bi-trash"></i>Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
